{% extends '__page.jinja' %}
{% from 'macros/form.jinja' import form_field, form_submit, form_cancel %}

{% block title %}
    Register
{% endblock %}
{% block body %}
    <div class="h-full flex items-center">
        <div class="flex flex-col items-center
           bg-titan-100 p-2 gap-1 w-60 rounded-md">
            <h1 class="text-xl  font-bold mb-1">Register</h1>
            <form method="post">
                {{ form_field(form.login) }}
                {{ form_field(form.firstname) }}
                {{ form_field(form.lastname) }}
                {{ form_field(form.email) }}
                {{ form_field(form.phone) }}
                <hr class="border-3 border-titan-500 my-5">
                {{ form_field(form.password) }}
                {{ form_field(form.passwordAgain) }}
                <div class="flex justify-end gap-20">
                    <div class="mt-4 mb-1">{{ form_cancel(redirect=url_for('index')) }}</div>
                    <div class="mt-4 mb-1">{{ form_submit("Register") }}</div>
                </div>
            </form>
        </div>
    </div>
{% endblock %}