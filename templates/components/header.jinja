{% if request.endpoint == 'index' %}
<header class="flex justify-center bg-titan-100 shadow-[inset_0_-10px_15px_-3px_rgba(109,105,95,1)]">
{% else %}
<header class="flex justify-center bg-titan-100 shadow-[inset_0_-10px_15px_-3px_rgba(249,248,244,1)]">
{% endif %}
    <div class="flex justify-between flex-row flex-grow pt-2 pb-1 md:py-4 px-8 max-w-screen-xl">
        <a class="flex flex-row no-underline text-titan-950" href="{{ url_for('index') }}">
            <img class="h-8 mr-2" src="{{ url_for('static', filename='img/favicon.svg') }}">
            <p class="text-2xl">Jolt</p>
        </a>
        <div class="flex flex-row mt-0.5">
            <a class="mr-3.5 md:mr-2" href="{{ url_for('bikes_management_page') }}">
                <img class="h-7" src="{{ url_for('static', filename='img/wrench.svg') }}">
            </a>
            <a href="{{ url_for('user_profile_page') }}">
                <img class="h-7" src="{{ url_for('static', filename='img/user.svg') }}">
            </a>
        </div>
    </div>
</header>