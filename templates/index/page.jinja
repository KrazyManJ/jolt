{% extends '__page.jinja' %}

{% block title %}Homepage{% endblock %}

{% block body %}
	<h1 class="text-3xl mb-4 font-bold">Our sortiment</h1>
    <form method="get">
        <div class="border border-titan-600 rounded-md p-1">
                <input type="search" action="/" name="search"
                   class="bg-[url('{{ url_for('static', filename="img/search.svg") }}')]
                   bg-no-repeat bg-left bg-[length:1.5rem_1rem] pl-7 focus:outline-none
                   w-full" placeholder="Search for a bike..."
                   {% if request.args.get('search') %}
                        value="{{ request.args.get("search") }}"
                   {% endif %}
                   onblur="search()">
        </div>
        <div class="flex gap-8 mt-8 flex-col md:flex-row">
            {% include 'index/filter.jinja' %}
            {% include 'index/bikes.jinja' %}
        </div>
    </form>
    <script>
        function search(){
            document.getElementsByName("search").submit()
        }
    </script>
{% endblock %}