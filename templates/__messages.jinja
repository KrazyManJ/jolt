{% set categories = ({
    "error":("border-red-600","🚫"),
    "warning":("border-amber-500","⚠️"),
    "success":("border-lime-500","✅"),
    "info": ("border-sky-500","ℹ️")
}) %}

{% with messages = get_flashed_messages(with_categories=True) %}
    {% if messages %}
        <div class="max-w-screen-md w-full mx-auto my-5  text-titan-800 flex flex-col gap-2">
            {% for category, message in messages %}
                <div class="p-2 px-4 border-2 rounded-lg shadow-lg {{ categories[category][0] }}">
                    {{ categories[category][1] }} {{ message }}
                </div>
            {% endfor %}
        </div>

    {% endif %}
{% endwith %}