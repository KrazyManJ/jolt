{% macro form_field(field, variant='block') %}
    <div>
        <div>{{ field.label }}</div>
        {% if field.type == 'RadioField' %}
            {% for subfield in field %}
                <label>
                    {{ subfield() }} {{ subfield.label.text }}
                </label>
            {% endfor %}
        {% else %}
            {{ field(**kwargs)|safe }}
        {% endif %}
        {% if field.errors %}
            <ul>
                {% for error in field.errors %}
                    <li>{{ error }}</li>
                {% endfor %}
            </ul>
        {% endif %}
    </div>
{% endmacro %}

{% macro form_submit(label="Submit") %}
    <input type="submit" value="{{ label }}">
{% endmacro %}