{% macro form_field(field, variant='block', req=False) %}
    <div class="mb-1">
        <div class="text-titan-950">{{ field.label }}</div>
        {% if field.type == 'RadioField' %}
            {% for subfield in field %}
                <label>
                    {{ subfield() }} {{ subfield.label.text }}
                </label>
            {% endfor %}
        {% else %}
            {{ field(required=req,**kwargs)|safe }}
        {% endif %}
        {% if field.errors %}
            <ul>
                {% for error in field.errors %}
                    <li>{{ error }}</li>
                {% endfor %}
            </ul>
        {% endif %}
    </div>
{% endmacro %}

{% macro form_submit(label="Submit") %}
    <input class="bg-primary px-2 py-2 rounded-md
    text-white" type="submit" value="{{ label }}">
{% endmacro %}

{% macro form_cancel(redirect,label="Cancel") %}
    <button onclick="window.location.href='{{ redirect }}'"
                                   class="bg-titan-400 px-2 py-2 rounded-md
    text-white">{{ label }}</button>
{% endmacro %}